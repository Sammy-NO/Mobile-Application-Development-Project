<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <Spinner
        android:id="@+id/spinnerSelectChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_child_prompt"/>

    <CheckBox
        android:id="@+id/checkBoxEnableReminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Reminders" />

    <EditText
        android:id="@+id/editTextReminderPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reminder period in weeks"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />
</LinearLayout>
